{% extends 'base.html.twig' %}

{% block title %}{{ post.title }}{% endblock %}

{% block body %}
    <p>ID {{ id }}</p>
    <h3>{{ post.title|upper }}</h3>
    <p>{{ post.text }}</p>
    <p>{{ post.date|date('H:i:s') }}</p>
    {{ 650|price }}
    <p>Here is the current locale {{ locale }}</p>

    <p>{{ message }}</p>

    <p>Env: {{ app.enviroment }}</p>
    <p>User: {{ app.user }}</p>
    <p>Request: {{ app.request }}</p>
    <p>Session started: {{ app.seesion.isStarted }}</p>
    <p>Debug: {{ app.debug }}</p>
{% endblock %}